
<%= form_with model: @listOfItems, url: shopping_path(@listOfItems) do |form| %>
  <div>
    <%= form.label "Item Name" %><br>
    <%= form.text_field :itemName %>
    <% @listOfItems.errors.full_messages_for(:itemName).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @listOfItems.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :itemPrice %><br>
    <%= form.text_field :itemPrice %>
    <% @listOfItems.errors.full_messages_for(:itemPrice).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>